# {{ ansible managed }}
# service to watch for usb presence
[Unit]
Description=MediaSync trigger
Requires=dev-disk-by\x2dlabel-{{ portable.disklabel }}.device
After=dev-disk-by\x2dlabel-{{ portable.disklabel }}.device

[Service]
ExecStart=/usr/local/bin/autosync.sh

[Install]
WantedBy=dev-disk-by\x2dlabel-{{ portable.disklabel }}.device
